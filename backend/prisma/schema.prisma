generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  plan      String   @default("free")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mvps      Mvp[]
  apiKeys   ApiKey[]
}

model Mvp {
  id          String   @id @default(cuid())
  idea        String   @db.Text
  result      String   @db.Text
  metadata    Json?
  status      String   @default("generated")

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique
  name      String

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  lastUsed  DateTime?

  @@index([userId])
}
